<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Description>A PLC communication implementation for Beckhoff ADS</Description>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
        <PackageReference Include="Beckhoff.TwinCAT.Ads" Version="5.0.479" NoWarn="NU1701" />
        <PackageReference Include="Beckhoff.TwinCAT.Ads.Reactive" Version="5.0.479" NoWarn="NU1701" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.0" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
        <PackageReference Condition="'$(Configuration)' == 'Release'" Include="PlcInterface.Abstraction" Version="2.3.*" />
        <PackageReference Include="System.IO.Abstractions" Version="14.0.3" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\PlcInterface.Abstraction\PlcInterface.Abstraction.csproj" />
    </ItemGroup>
</Project> 