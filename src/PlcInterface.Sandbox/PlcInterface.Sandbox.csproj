<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <PropertyGroup>
    <NLogVersion>5.2.0</NLogVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Vectron.InteractiveConsole" Version="0.0.41" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
    <PackageReference Include="NLog.Extensions.Logging" Version="$(NLogVersion)" />
    <PackageReference Include="NLog.Schema" Version="$(NLogVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PlcInterface.Ads\PlcInterface.Ads.csproj" />
    <ProjectReference Include="..\PlcInterface.OpcUa\PlcInterface.OpcUa.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="nlog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
